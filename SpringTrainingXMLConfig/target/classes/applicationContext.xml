<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean name="customerRepository" class="com.bmw.springTraining.repository.AnotherRepoCustomerRepositoryImpl"/>

    <!-- declare customer service bean and inject the customer repository to use by invoking setter injection,
         @see CustomerServiceImpl.setCustomerRepository -->
    <bean name="customerService" class="com.bmw.springTraining.service.CustomerServiceImpl">
        <property name="customerRepository" ref="customerRepository"/>
    </bean>

</beans>